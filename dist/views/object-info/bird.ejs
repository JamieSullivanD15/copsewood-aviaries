
<% include ../partials/header %>

<div class="container">
    <h1>Bird Page</h1>

    <% if (isEditing) { %>
      <form method='POST' action='/api/birds/<%=  bird._id %>'>

        <div class="form-group">
          <label for="breed">Breed</label>
          <input type="text" name="breed" class="form-control" value="<%= bird.breed %>">
        </div>

        <div class="form-group">
          <label for="price">Price</label>
          <input type="number" name="price" class="form-control" value="<%= bird.price %>">
        </div>

        <div class="form-group">
          <label for="category">Category:</label>
          <br />

          <input type="radio" value="Large Parrot" name="category" <% if(bird.category === 'Large Parrot'){ %> checked <% } %> aria-label="Radio button fro large parrot">
          <label for="large-parrot">Large Parrot</label>
          <br />

          <input type="radio" value="Medium Parrot" name="category" <% if(bird.category === 'Medium Parrot'){ %> checked <% } %> aria-label="Radio button for medium parrot">
          <label for="medium-parrot">Medium Parrot</label>
          <br />

          <input type="radio" value="Small Parrot" name="category" <% if(bird.category === 'Small Parrot'){ %> checked <% } %> aria-label="Radio button for small parrot">
          <label for="small-parrot">Small Parrot</label>
          <br />

          <input type="radio" value="Poultry" name="category" <% if(bird.category === 'Poultry'){ %> checked <% } %> aria-label="Radio button for poultry">
          <label for="poultry">Poultry</label>
        </div>

        <input class="btn btn.primary" type="submit" value="Submit">

      </form>
    <% } else { %>

      <div class="row">
          <div class="col-4">
            <% for (let i = 0; i < bird.images.length; ++i) { %>
              <img src=<%= bird.images[i].path %> width="300" height="300" />
            <%  } %>
          </div>

          <div class="col-8">
            <h3> Breed: <%= bird.breed %> </h3>
            <h3> Price: â‚¬<%=  bird.price %> </h3>
            <h3> Category: <%= bird.category %> </h3>
          </div>
      </div>

    <% } %>
  </div>

<% include ../partials/footer %>
